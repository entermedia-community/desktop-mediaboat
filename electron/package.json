{
  "name": "media-drive-ai",
  "productName": "Media Drive AI",
  "version": "0.3.0",
  "description": "Connecting your computer to entermedia workspaces",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "lint": "echo \"No linting configured\"",
    "distwin": "electron-builder --win nsis zip",
    "distlin": "electron-builder --linux deb rpm tar.gz",
    "distmac": "electron-builder --mac zip",
    "distonmac": "electron-builder --mac zip dmg"
  },
  "keywords": [],
  "author": {
    "name": "Mitsuo Yazawa",
    "email": "mitsuo@entermediadb.org"
  },
  "license": "Entermediadb.org",
  "homepage": "https://entermediadb.org",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "em_app"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux",
            "win32"
          ]
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "options": {
              "maintainer": "EnterMedia <help@entermediadb.org>",
              "homepage": "http://entermediadb.org"
            }
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "maintainer": "EnterMedia <help@entermediadb.org>",
              "homepage": "http://entermediadb.org"
            }
          }
        }
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "jquery": "^3.3.1",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.51",
    "@electron-forge/maker-appx": "^6.0.0-beta.51",
    "@electron-forge/maker-deb": "^6.0.0-beta.51",
    "@electron-forge/maker-dmg": "^6.0.0-beta.51",
    "@electron-forge/maker-rpm": "^6.0.0-beta.51",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.51",
    "@electron-forge/maker-wix": "^6.0.0-beta.51",
    "@electron-forge/maker-zip": "^6.0.0-beta.51",
    "electron": "9.1.1",
    "electron-builder": "^22.7.0",
    "electron-installer-squirrel-windows": "^1.3.0",
    "electron-installer-windows": "^3.0.0",
    "electron-packager": "*",
    "electron-prebuilt": "*"
  },
  "build": {
    "appId": "com.entermedia.app",
    "productName": "Media Drive AI",
    "asar": false,
    "files": [
      "src/**/*"
    ],
    "linux": {
      "target": "deb, rpm",
      "maintainer": "help@entermedia.org",
      "synopsis": "Media Drive AI",
      "category": "Utility"
    },
    "protocols": [
      {
        "name": "entermedia",
        "role": "Viewer",
        "schemes": [
          "entermedia"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/emrlogo256.png"
    },
    "nsis": {
      "perMachine": true
    },
    "mac": {
      "icon": "build/icons/icon.icns",
      "category": "public.app-category.utilities"
    }
  }
}
