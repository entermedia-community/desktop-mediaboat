{
  "name": "emediaworkspace",
  "productName": "eMedia Workspace",
  "version": "2.0.2",
  "description": "eMedia Workspace",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "distwin": "electron-builder --win zip",
    "distmacarm64": "electron-builder --arm64 --mac dmg",
    "distmacx64": "electron-builder --x64 --mac dmg"
  },
  "keywords": [],
  "author": {
    "name": "EnterMedia",
    "email": "info@entermediadb.org"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.7",
    "electron-log": "5.0.3",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "ext-name": "^5.0.0",
    "unused-filename": "^2.1.0",
    "form-data": "^4.0.0",
    "mkdirp": "^3.0.1",
    "querystring": "^0.2.1",
    "url": "^0.11.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "electron": "28.1.1",
    "electron-builder": "^24.9.1",
    "electron-installer-squirrel-windows": "^1.3.0",
    "electron-installer-windows": "^3.0.0"
  },
  "build": {
    "appId": "org.entermedia.app",
    "productName": "eMediaWorkspace",

    "asar": false,
    "files": ["src/**/*"],
    "protocols": [
      {
        "name": "entermedia",
        "role": "Viewer",
        "schemes": ["entermedia"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/emrlogo256.png"
    },
    "nsis": {
      "perMachine": true
    },
    "mac": {
      "identity": "tech@entermediadb.org"
    }
  }
}
