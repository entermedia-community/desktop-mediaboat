{
	"name": "emedia-library",
	"productName": "eMedia Library",
	"version": "2.6.4",
	"description": "Digital Asset Management Solution",
	"main": "src/index.js",
	"homepage": "https://github.com/entermedia-community/desktop-mediaboat",
	"scripts": {
		"start": "electron .",
		"build": "node cleanup && set NODE_ENV=production && node ./build/builder.js",
		"postinstall": "electron-builder install-app-deps",
		"afterSign": "build/notarize.js"
	},
	"keywords": [
		"eMedia Library",
		"DAM",
		"Digital Asset Management"
	],
	"author": {
		"name": "eMedia Library",
		"email": "info@entermediadb.org"
	},
	"license": "MIT",
	"dependencies": {
		"axios": "^1.10.0",
		"dotenv": "^16.5.0",
		"electron-dl": "^4.0.0",
		"electron-log": "^5.4.1",
		"electron-store": "^10.1.0",
		"form-data": "^4.0.3",
		"got-cjs": "^12.5.4",
		"gulp": "^5.0.1",
		"mime-types": "^3.0.1"
	},
	"devDependencies": {
		"@electron/fuses": "^1.8.0",
		"@electron/notarize": "^3.0.1",
		"@electron/osx-sign": "^2.0.0",
		"@electron/universal": "^2.0.3",
		"electron": "^36.5.0",
		"electron-builder": "^26.0.12",
		"electron-builder-squirrel-windows": "^26.0.12"
	},
	"build": {
		"productName": "eMedia Library",
		"appId": "com.emedialibrary",
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": [
						"ia32"
					]
				}
			]
		},
		"mac": {
			"category": "public.app-category.utilities",
			"hardenedRuntime": true,
			"entitlements": "build/mac.plist",
			"entitlementsInherit": "build/mac.plist",
			"gatekeeperAssess": false,
			"target": [
				{
					"target": "dmg",
					"arch": [
						"x64",
						"arm64"
					]
				}
			]
		},
		"dmg": {
			"sign": true
		},
		"linux": {
			"target": [
				{
					"target": "deb",
					"arch": [
						"x64",
						"arm64"
					]
				}
			]
		}
	}
}
